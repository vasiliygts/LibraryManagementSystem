<Window x:Class="LibraryManagementSystem.EditIssueReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Issue/Return Record" Height="400" Width="500" Background="#FFBEECBF">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Reader Selection -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Reader:" Width="100" VerticalAlignment="Center" />
            <ComboBox Name="ReaderComboBox" Width="300" DisplayMemberPath="Name" />
        </StackPanel>

        <!-- Book Selection -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Book:" Width="100" VerticalAlignment="Center" />
            <ComboBox Name="BookComboBox" Width="300" DisplayMemberPath="Title" />
        </StackPanel>

        <!-- Borrow Date -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Borrow Date:" Width="100" VerticalAlignment="Center" />
            <DatePicker Name="BorrowDatePicker" Width="300" />
        </StackPanel>

        <!-- Return Date -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Return Date:" Width="100" VerticalAlignment="Center" />
            <DatePicker Name="ReturnDatePicker" Width="300" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save" Width="100" Height="30" Margin="10" Click="SaveButton_Click" />
            <Button Content="Cancel" Width="100" Height="30" Margin="10" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
