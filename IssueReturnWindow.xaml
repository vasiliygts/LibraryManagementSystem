<Window x:Class="LibraryManagementSystem.IssueReturnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Issue-Return Records" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Поле пошуку -->
        <TextBox Name="SearchBox"
                 Width="300"
                 Height="25"
                 Margin="0 0 0 10"
                 VerticalAlignment="Top"
                 TextChanged="SearchBox_TextChanged"
                 GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"
                 Tag="Search by Reader or Book"
                 Foreground="Gray" />

        <!-- Таблиця даних -->
        <DataGrid Name="IssueReturnDataGrid"
                  Grid.Row="1"
                  Margin="0 10 0 10"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Transaction ID" Binding="{Binding TransactionId}" Width="100" />
                <DataGridTextColumn Header="Reader Name" Binding="{Binding ReaderName}" Width="150" />
                <DataGridTextColumn Header="Book Title" Binding="{Binding BookTitle}" Width="150" />
                <DataGridTextColumn Header="Borrow Date" Binding="{Binding BorrowDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100" />
                <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0 10 0 0">
            <Button Content="Додати запис / Add Record" Click="AddRecord" Width="170" Margin="5" />
            <Button Content="Редагувати / Edit Record" Click="EditRecord" Width="170" Margin="5" />
            <Button Content="Видалити / Delete Record" Click="DeleteRecord" Width="170" Margin="5" />
            <Button Content="Експорт у текст / Export to Text" Width="180" Height="30" Margin="5"  Click="ExportToText_Click" />
        </StackPanel>
    </Grid>
</Window>
