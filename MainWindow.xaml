<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управління бібліотекою / Library Management System" 
        Height="500" Width="800"
        HorizontalContentAlignment="Center" 
        Background="#FFBEECBF" 
        Foreground="Black">
    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Ліва колонка для кнопок (ширша) -->
            <ColumnDefinition Width="3*" />
            <!-- Права колонка для підсумкової інформації -->
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Ліва частина: Кнопки -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Button Content="Книги / Books" 
                    Click="OpenBooksWindow"
                    Width="400" Height="60"
                    FontSize="18" Margin="10" 
                    Background="#FFF5EABD" />
            <Button Content="Читачі / Readers" 
                    Click="OpenReadersWindow"
                    Width="400" Height="60"
                    FontSize="18" Margin="10" 
                    Background="#FFF5EABD" />
            <Button Content="Отримання-повернення книг / Issue-Return" 
                    Click="OpenIssueReturnWindow"
                    Width="400" Height="60"
                    FontSize="18" Margin="10" 
                    Background="#FFF5EABD" />
            <Button Content="Вихід / Exit" 
                    Click="ExitApplication"
                    Width="400" Height="60"
                    FontSize="18" Margin="10" 
                    Background="#FFF5EABD" />
        </StackPanel>

        <!-- Права частина: Підсумкова інформація -->
        <StackPanel Grid.Column="1" Margin="10,20,20,0" VerticalAlignment="Top">
            <TextBlock Text="Підсумкова інформація / Summary:" 
                        TextWrapping="Wrap"
                       FontSize="22" FontWeight="Bold" 
                       Margin="0,0,0,20" TextAlignment="Center" Height="68" />
            <TextBlock Name="TotalReadersText" 
                       FontSize="16" FontWeight="SemiBold" 
                       Margin="0,10,0,10" />
            <TextBlock Name="TotalBooksText" 
                       FontSize="16" FontWeight="SemiBold" 
                       Margin="0,10,0,10" />
            <TextBlock Name="BooksOnLoanText" FontSize="14" FontWeight="Bold" />
            <TextBlock Name="BooksInLibraryText" FontSize="14" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>
