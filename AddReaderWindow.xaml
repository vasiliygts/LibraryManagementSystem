<Window x:Class="LibraryManagementSystem.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Reader" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Name -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Name:" Width="100" VerticalAlignment="Center" />
            <TextBox Name="NameTextBox" Width="400" />
        </StackPanel>

        <!-- Class -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Class:" Width="100" VerticalAlignment="Center" />
            <TextBox Name="ClassTextBox" Width="400" />
        </StackPanel>

        <!-- Phone -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Phone:" Width="100" VerticalAlignment="Center" />
            <TextBox Name="PhoneTextBox" Width="400" />
        </StackPanel>

        <!-- Email -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,0">
            <Label Content="Email:" Width="100" VerticalAlignment="Center" />
            <TextBox Name="EmailTextBox" Width="400" />
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save" Click="SaveReader" Width="120" Height="40" Margin="10" />
            <Button Content="Cancel" Click="Cancel" Width="120" Height="40" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
