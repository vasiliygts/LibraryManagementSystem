<Window x:Class="LibraryManagementSystem.BooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управління книгами бібліотеки / Books Management" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Лейбл -->
            <RowDefinition Height="Auto" />
            <!-- Поле пошуку -->
            <RowDefinition Height="*" />
            <!-- DataGrid -->
            <RowDefinition Height="Auto" />
            <!-- Кнопки -->
        </Grid.RowDefinitions>

        <!-- Лейбл -->
        <Label Content="Фільтр відбору книг:"
               Grid.Row="1"
               FontSize="14"
               FontWeight="Bold"
               Margin="0,0,0,5"
               VerticalAlignment="Center"
               HorizontalAlignment="Left" />

        <!-- Поле пошуку -->
        <TextBox Name="SearchBox"
                 Grid.Row="1"
                 Width="300"
                 Height="25"
                 Margin="0,0,0,10"
                 VerticalAlignment="Center"
                 FontSize="14"
                 TextChanged="SearchBox_TextChanged"
                 GotFocus="SearchBox_GotFocus"
                 LostFocus="SearchBox_LostFocus"
                 Tag="Search by Title, Author, Genre, ISBN, Year"
                 Foreground="Gray" />

        <!-- DataGrid -->
        <DataGrid Name="BooksDataGrid"
                  Grid.Row="2"
                  Margin="0,10,0,10"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch" />

        <!-- Кнопки -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,10,0,0">
            <Button Content="Додати/Add" Click="AddBook" Width="120" Margin="5" />
            <Button Content="Редагувати/Edit" Click="EditBook" Width="120" Margin="5" />
            <Button Content="Видалити/Delete" Click="DeleteBook" Width="120" Margin="5" />
            <Button Content="Експорт/Export to File" Click="ExportToFile" Width="150" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
